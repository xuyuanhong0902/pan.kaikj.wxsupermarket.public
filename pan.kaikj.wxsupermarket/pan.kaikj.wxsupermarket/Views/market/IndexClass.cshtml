                                    }
                                    else
                                    {
                                        subClassHtml = $"{subClassHtml}<li  data-classid='{item.classid}' data-supClassid='{item.supclassid}' class='subdaohangInfor subdaohang {((classId==item.classid.ToString())?"active2":"")} '><a class='{((classId==item.classid.ToString())?"active2":"")}' href='/market/IndexClass?classid={@item.classid}&supClassid={@item.supclassid}'>{item.classname}</a></li>";
                                    }
                                }
                            }
                        }
                    }

                }
