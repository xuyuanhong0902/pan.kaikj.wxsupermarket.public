                            }
                            else
                            {
                                if (supClassId == item.supclassid.ToString())
                                {
                                    if (string.IsNullOrEmpty(classId) || classId == "0")
                                    {
                                        thisSubClassHtml = $@"{thisSubClassHtml}<div style='width:30%;float:left;text-align:center;'>
                                    <a href='/market/IndexClass?classid={@item.classid}&supClassid={@item.supclassid}' style='display: flex; flex-direction: column;-webkit-box-align: center;align-items: center;    height: 100px;    width: 100%;    margin-top: 3px;'>
